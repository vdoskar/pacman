        xmlns:local="clr-namespace:pacman"
        mc:Ignorable="d"
        Title="PACMAAAAN" 
	    KeyDown="Window_KeyDown" KeyUp="Window_KeyUp" 
        Width="Auto" Height="Auto" SizeToContent="WidthAndHeight">
